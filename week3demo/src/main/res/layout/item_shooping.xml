<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--购物车子布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox_item"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox"/>
        <LinearLayout
            android:layout_width="@dimen/dp_292"
            android:layout_height="@dimen/dp_97"
            android:padding="@dimen/dp_8"
            android:orientation="horizontal"
            android:background="@drawable/layer">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/shop_images"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:layout_marginRight="@dimen/dp_10"
                fresco:placeholderImage="@mipmap/loading"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/shop_context"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="3"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:text="hello"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0606"
                        android:textSize="@dimen/sp_14"
                        android:text="hello"/>
                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/shopnum_subtract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_20"
                            android:textColor="#666666"
                            android:text="－"/>
                        <TextView
                            android:id="@+id/shopnum"
                            android:layout_width="@dimen/dp_31"
                            android:layout_height="@dimen/dp_18"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#666666"
                            android:background="#cccccc"
                            android:gravity="center"
                            android:text="1"/>
                        <TextView
                            android:id="@+id/shopnum_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_20"
                            android:textColor="#666666"
                            android:text="＋"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_97"
        android:text="删除"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:background="#ff5e70"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>